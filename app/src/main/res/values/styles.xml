<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/Transparent</item>
        <item name="android:windowAnimationStyle">@style/SlideAnimation</item>
    </style>

    <style name="SlideAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_enter_fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_enter_fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_exit_fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_exit_fade_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/anim_enter_fade_in</item>
        <item name="android:taskOpenExitAnimation">@anim/anim_enter_fade_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/anim_exit_fade_in</item>
        <item name="android:taskCloseExitAnimation">@anim/anim_exit_fade_out</item>
        <item name="android:taskToFrontEnterAnimation">@anim/anim_enter_fade_in</item>
        <item name="android:taskToFrontExitAnimation">@anim/anim_enter_fade_out</item>
        <item name="android:taskToBackEnterAnimation">@anim/anim_exit_fade_in</item>
        <item name="android:taskToBackExitAnimation">@anim/anim_exit_fade_out</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="TextAppearance.Design.CollapsingToolbar.Expanded.Shadow">
        <item name="android:shadowDy">0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="AppTheme.TransParent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
